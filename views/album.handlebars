<div class="container row">
{{#each albums as |album| }}

<div class="card col-3">
    <div class="card-header">
        <iframe style="border-radius:12px" src="https://open.spotify.com/embed/album/{{album.id}}" width="100%" height="352" frameBorder="0" allowfullscreen="" allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture" loading="lazy"></iframe>
    </div>
    <div class="card-body">
        <button class="no-button"><h4>{{album.name}}</h4></button>
    </div>
</div>
{{/each}}
</div>

