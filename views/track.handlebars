<div class="container track-container row">
{{#each tracks as |track| }}
<div class="col-6 m-4 justify-content-center card">
    <iframe style="border-radius:12px" src="https://open.spotify.com/embed?uri={{track.uri}}" width="100%" height="152" frameBorder="0" allowfullscreen="" allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture" loading="lazy"></iframe>
    <div class="card-body row justify-content-center">
    <p>
        <button type="button" class="btn btn-primary like-btn" data-id="{{track.id}}">ðŸ§¡</button>
        <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#{{track.id}}" aria-expanded="false" aria-controls="collapseExample">ðŸ’¬</button>
    </p>
    <div class="collapse" id="{{track.id}}">
        <div class="card card-body">
            <form>
                <input class="comment-input" type="text" name="comment-text" />
                <button type="button" data-id="{{track.id}}" class="btn btn-primary comment-btn">Submit</button>
            </form>
        </div>
    </div>

    </div>
    <div class="card-footer text-muted">
        <h6>Comment :</h6>
        <ul class="list-group list-group-flush">
        {{#each track.comments as |comment|}}                          
            <li class="list-group-item">
                <div class="d-flex w-100 justify-content-between">
                    <p class="mb-1">{{comment.text}}</p>
                    <small>by {{comment.user.id}} {{timeAgo comment.createdAt}}</small>
                </div>
            </li>    
        {{/each}}
        </ul> 
    </div>  
 
</div>
{{/each}}
</div>




<script src="/js/track.js"></script>